#!#EndUsage
#!#
#!#  this_arg=$1
#!#  this_param=
#!#  this_used_param=
#!#  retval=0
#!#  shift  # If no $1, no problem, so no  &&  or  ||
#!## if <help-requested>  
#!#  if [ "${this_arg}" = "--help" -o "${this_arg}" = "-h" ]; then
#!#    echo "${usage}" | sed 's#^[.]$##g' >&2
